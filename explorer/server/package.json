{
  "name": "server",
  "version": "0.1.0",
  "description": "CasperLabs Explorer Server",
  "main": "dist/server.js",
  "scripts": {
    "clean:dist": "rm -rf dist",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "~build": "tsc --watch",
    "prestart": "npm run build",
    "start": "node .",
    "dev": "nodemon -e ts --watch src --exec \"npm run build && npm run start\"",
    "start:both": "concurrently \"npm run dev\" \"cd ../ui && npm start\"",
    "test": "TS_NODE_FILES=true mocha -r ts-node/register test/**/*.test.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.2",
    "chai": "^4.2.0",
    "concurrently": "^4.1.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.3",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.0",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@improbable-eng/grpc-web": "^0.9.6",
    "@improbable-eng/grpc-web-node-http-transport": "^0.9.6",
    "@types/command-line-args": "^5.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express-jwt": "0.0.42",
    "@types/google-protobuf": "^3.7.1",
    "blakejs": "^1.1.0",
    "casperlabs-grpc": "file:../grpc",
    "casperlabs-sdk": "file:../sdk",
    "command-line-args": "^5.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "google-protobuf": "^3.9.0",
    "jwks-rsa": "^1.6.0",
    "lodash": "^4.17.14",
    "tweetnacl-ts": "^1.0.3",
    "tweetnacl-util": "^0.15.0"
  }
}
